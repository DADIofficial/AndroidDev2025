<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="22dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/card_stroke">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/content_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/block_image"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="16:9"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.ImageTopRounded"
            tools:src="@tools:sample/backgrounds/scenic" />

        <!-- Gradient overlay at bottom of image for readability -->
        <View
            android:id="@+id/image_fade"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_image_bottom_fade"
            app:layout_constraintStart_toStartOf="@id/content_image"
            app:layout_constraintEnd_toEndOf="@id/content_image"
            app:layout_constraintTop_toTopOf="@id/content_image"
            app:layout_constraintBottom_toBottomOf="@id/content_image" />

        <!-- Title -->
        <TextView
            android:id="@+id/block_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Name of game"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/content_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Name of game" />

        <!-- Play button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/play_button"
            style="@style/Widget.App.PlayButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:minWidth="120dp"
            android:text="@string/play"
            app:icon="@drawable/ic_play_24"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/block_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Play" />

        <!-- Price chip under the button -->
        <com.google.android.material.chip.Chip
            android:id="@+id/price_chip"
            style="@style/Widget.App.InfoChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/price_placeholder"
            app:chipIcon="@drawable/ic_coin_24"
            app:chipIconTint="?attr/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@id/play_button"
            app:layout_constraintEnd_toEndOf="@id/play_button"
            tools:text="Cost: 200" />

        <!-- Description -->
        <TextView
            android:id="@+id/description_block_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:maxLines="3"
            android:text="Desciption about game"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/block_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/play_button"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Desciption about game" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

