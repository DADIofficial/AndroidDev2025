<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Main card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lobby_card_root"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/card_stroke"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/lobby_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Lobby: General Knowledge #12" />

            <!-- Players chip -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/players_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="999dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/card_stroke"
                app:layout_constraintTop_toBottomOf="@id/lobby_name"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/players_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="?attr/colorOnSurface"
                        android:contentDescription="players" />

                    <TextView
                        android:id="@+id/players"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="Players: 5 / 8" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:alpha="0.35"
                android:background="@color/card_stroke"
                app:layout_constraintTop_toBottomOf="@id/players_chip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Primary action -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/JointoGame"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginTop="16dp"
                android:text="Join"
                android:textSize="16sp"
                android:textStyle="bold"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_play_24"
                app:iconGravity="textStart"
                app:iconPadding="10dp"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Secondary row: Quit + Return -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/QuitGame"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:text="Quit"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                app:cornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/card_stroke"
                app:backgroundTint="?attr/colorSurface"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintTop_toBottomOf="@id/JointoGame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ReturnToLobby"
                app:layout_constraintWidth_percent="0.49" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ReturnToLobby"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:text="Return"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                app:cornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/card_stroke"
                app:backgroundTint="?attr/colorSurface"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintTop_toBottomOf="@id/JointoGame"
                app:layout_constraintStart_toEndOf="@id/QuitGame"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.49" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

