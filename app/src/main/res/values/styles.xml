<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlay.App.ImageTopRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">22dp</item>
        <item name="cornerSizeTopRight">22dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <style name="Widget.App.PlayButton" parent="Widget.Material3.Button">
    <item name="cornerRadius">16dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">16sp</item>


    <item name="backgroundTint">#6A00FF</item>
    <item name="android:textColor">@android:color/white</item>


    <item name="android:paddingLeft">14dp</item>
    <item name="android:paddingRight">14dp</item>
    </style>

    <style name="Widget.App.HeaderCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">18dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ShapeAppearanceOverlay" />

    <style name="ShapeAppearanceOverlay.App" />

    <style name="ShapeAppearanceOverlay.App.Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.InfoChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">999dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="chipBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="TextAppearance.App.BottomNav.Active" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.BottomNav.Inactive" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>