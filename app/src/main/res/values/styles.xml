<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ShapeAppearanceOverlay.App.ImageTopRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">22dp</item>
        <item name="cornerSizeTopRight">22dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <style name="Widget.App.PlayButton" parent="Widget.Material3.Button">
    <item name="cornerRadius">16dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">16sp</item>


    <item name="backgroundTint">#6A00FF</item>
    <item name="android:textColor">@android:color/white</item>


    <item name="android:paddingLeft">14dp</item>
    <item name="android:paddingRight">14dp</item>
    </style>

    <style name="Widget.App.HeaderCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">18dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ShapeAppearanceOverlay" />

    <style name="ShapeAppearanceOverlay.App" />

    <style name="ShapeAppearanceOverlay.App.Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.InfoChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">999dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="chipBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="TextAppearance.App.BottomNav.Active" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.BottomNav.Inactive" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="Widget" />


    <style name="Widget.App" />



    <style name="Widget.App.HeaderActionSecondary">
        <item name="android:paddingHorizontal" tools:targetApi="26">14dp</item>
        <item name="android:paddingVertical" tools:targetApi="26">10dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:background">@drawable/bg_header_pill_outline</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.App.HeaderActionPrimary">
        <item name="android:paddingHorizontal" tools:targetApi="26">14dp</item>
        <item name="android:paddingVertical" tools:targetApi="26">10dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_header_pill_primary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.App.HeaderUserPill">
        <item name="android:paddingHorizontal" tools:targetApi="26">14dp</item>
        <item name="android:paddingVertical" tools:targetApi="26">10dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:background">@drawable/bg_header_pill_soft</item>
    </style>

    <style name="Widget.App.PillButtonOutlinedSmall" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">999dp</item>

        <!-- Убираем inset'ы (часто именно они дают "разрез") -->
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>

        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.App.PillButtonFilledSmall" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">999dp</item>

        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>

        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>